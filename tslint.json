{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended",
        "tslint-plugin-prettier",
        "tslint-config-prettier"
    ],
    "rules": {
        "use-strict": true,
        "curly": true,
        "trailing-comma": false,
        "interface-name": [
            true,
            "never-prefix"
        ],
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "array-type": [
            true,
            "array"
        ],
        "prettier": true,
        "no-var-requires": false
    }
}