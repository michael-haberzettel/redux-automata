        "dist"
    ],
    "homepage": "https://github.com/mocoding-software/redux-automata#readme",
    "devDependencies": {
        "@types/jest": "22.2.1",
        "@types/node": "8.10.0",
        "clean-webpack-plugin": "0.1.19",
        "jest": "22.4.3",
        "ts-jest": "22.4.2",
        "ts-loader": "4.1.0",
        "tslint": "5.8.0",
        "tslint-loader": "3.6.0",
        "typescript": "2.7.2",
        "webpack": "4.2.0",
