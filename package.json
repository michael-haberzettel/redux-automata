        "clean-webpack-plugin": "0.1.16",
        "jest": "^21.1.0",
        "ts-jest": "^21.0.1",
        "ts-loader": "2.3.7",
        "tslint": "5.7.0",
        "tslint-loader": "3.5.3",
        "typescript": "2.5.2",
