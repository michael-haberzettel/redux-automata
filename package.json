{
    "name": "redux-automata",
    "version": "2.1.0",
    "description": "Finite state automata for Redux.",
    "main": "./dist/redux-automata.min.js",
    "typings": "./dist/typings/index.d.ts",
    "scripts": {
        "build": "webpack --config webpack.config.js --progress --color || echo not ok",
        "prerelease": "yarn build",
        "test": "jest --verbose"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mocoding-software/redux-automata.git"
    },
    "keywords": [
        "redux",
        "automata",
        "state machine",
        "state",
        "redux actions",
        "predictable state",
        "state chart",
        "finite state machine",
        "fsm"
    ],
    "author": "MOCODING, LLC",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/mocoding-software/redux-automata/issues"
    },
    "homepage": "https://github.com/mocoding-software/redux-automata#readme",
    "devDependencies": {
        "@types/jest": "21.1.5",
        "@types/node": "8.0.47",
        "clean-webpack-plugin": "0.1.17",
        "jest": "21.2.1",
        "ts-jest": "21.1.4",
        "ts-loader": "3.1.1",
        "tslint": "5.8.0",
        "tslint-loader": "3.5.3",
        "typescript": "2.5.3",
        "webpack": "3.8.1"
    },
    "dependencies": {
        "redux": "3.7.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "\\.(ts)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "/test/.*\\.(ts|js)$",
        "collectCoverageFrom": [
            "src/**"
        ]
    }
}
