{
	"compilerOptions": {
		"experimentalDecorators": true,		
		"module": "commonjs",
		"target": "es5",
		"noImplicitAny": true,		
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"sourceMap": false,
		"declaration": true,
		"outDir": "typings",
		"baseUrl": "./src",
        "removeComments": true,
        "lib": [
            "es6"            
        ],
        "types":[
            "node"
        ]
	},
	"files": [
		"src/index.ts"
	],
	"exclude": [
		"node_modules",
		"examples"
	]
}
