{
	"compilerOptions": {
		"experimentalDecorators": true,		
		"module": "commonjs",
		"target": "es5",
		"noImplicitAny": true,		
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"declaration": true,
		"outDir": "dist",		
		"removeComments": true,
		"baseUrl": "./src",
        "strict": true,
        "lib": [
            "es6"            
        ],
        "types":[
            "node", "jest"
        ]
	},
	"files": [
		"src/index.ts"
	],
	"exclude": [
		"node_modules",
		"examples"
	]
}
